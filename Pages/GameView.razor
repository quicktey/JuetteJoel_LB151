@page "/gameView"
@inject NavigationManager navigationManager

<div id="header" class="row m-auto">
    <div class="col-auto align-self-center">
        <a href="/">Spiel</a>
    </div>
    <div class="col-auto align-self-center">
        <a href="/scoreboard">Scoreboard</a>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col">
            <h3>Errate das Wort</h3>
            <div class="row">
                <div class="col-auto">
                    <div class="letter-box">
                        <div class="letter">
                            a
                        </div>
                    </div>
                </div>
            </div>
            <h3>Bereits versucht</h3>
            <p>y, c</p>
        </div>
        <div class="col-auto">
            <h3>Kontostand: 12'000</h3>
            <h3>Lebenspunkte: *</h3>
            <button id="end-game-btn" class="btn" onclick="@endGameBtnClicked">Spiel beenden</button>
        </div>
    </div>

</div>

@code {

    void adminLoginBtnClicked()
    {
        navigationManager.NavigateTo("/adminLogin");
    }

    void startGameBtnClicked()
    {
        navigationManager.NavigateTo("/gameView");
    }

    void endGameBtnClicked()
    {
        navigationManager.NavigateTo("/");
    }
}